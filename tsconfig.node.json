{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",               // ✅ Required for emit
    "noEmit": false                 // ✅ Explicitly allow emitting
  },
  "include": [
    "src/**/*",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*"
  ],
  "exclude": ["node_modules"]
}
